<view style="width:100%;height:{{height}}px;background-color:#F1F7FF;display: inline-block;">
  <view>
    <input type="text" placeholder="员工姓名" value="{{name}}" bindinput="name" class="input_css"></input> 
  </view>
  <view>
    <input type="text" placeholder="胸卡号"  value="{{eid}}" bindinput="eid" class="input_css"></input> 
  </view>
  <view>
    <input type="text" placeholder="手机号" value="{{phoneNumber}}" bindinput="phonenumber" class="input_css"></input> 
  </view>
  <view class="action" style="margin-left:3%;margin-top: 20px;">
    <text class="cuIcon-title text-gray"></text>
    <text style="color:#aaaaaa;" class="text-xl text-bold">角色列表</text>
  </view>
  <scroll-view scroll-y="true" style="height:{{height*0.45}}px;">
    <view style="width:70%;margin-left: 15%;">
      <view wx:for="{{YGlist}}">
        <button class="cu-btn bg-{{item.bgColor?'green2':'hui'}} margin-sm basis-sm" style="width: 100%;height: 35px;margin-left: 0px;" data-objuid="{{item.objuid}}" bindtap="check">{{item.roleName}}</button>
      </view>
    </view>
  </scroll-view>
  <view class="padding flex flex-direction">
    <button bindtap="save" class="cu-btn bg-blue2 lg" style="width:76%;margin-left:12%;margin-top: 15px;">保存</button>
  </view>
</view>
