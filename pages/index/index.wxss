.alert_full {
  background: transparent;
}

.alert_top_occupy {
  height: 80px;
  margin: 0 auto;
}

.alert_content_bg {
  background-size: 100% 100%;
  border-radius: 10px;
  margin-top: -25px;
  height: 400px;
}

.alert_content_top {
  background-size: 100% 100%;
  height: 100px;
  width: 100px;
  position: absolute;
  left: calc(100% / 2 - 100px / 2);
  top: 0px;
}
.alert_content_title {
  text-align: center;
  font-size: 25px;
  color: #ffffff;
  margin-top: 40px;
}

.alert_content_text {
  text-align: left;
  font-size: 16px;
  padding: 5px;
}
.alert_content_close {
  background-size: 100% 100%;
  height: 18px;
  width: 18px;
  position: absolute;
  left: calc(100% - 35px);
  top: 65px;
}