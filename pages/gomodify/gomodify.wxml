
<scroll-view scroll-y="true" scroll-top="{{scrolllocation}}px;" style="height:500px;">
  <view class="cu-bar bg-white">
    <view class="action">
      <text class="cuIcon-title text-blue"></text>
      <text class="text-xl text-blue text-bold">人员信息</text>
    </view>
  </view>
  <view style="padding-top: 10px;" class="cu-form-group">
		<view class="title">身份证号：</view>
		<input value="{{card}}" disabled></input>
  </view>
  <view style="padding-top: 10px;" class="cu-form-group">
		<view class="title">姓名：</view>
		<input placeholder="请输入姓名" value="{{name}}" bindinput="name"></input>
  </view>
  <view style="padding-top: 10px;" class="cu-form-group">
		<view class="title">职务：</view>
		<input placeholder="请输入职务" value="{{duty}}" bindinput="duty"></input>
  </view>
  <view style="padding-top: 10px;" class="cu-form-group">
		<view class="title">电话号码：</view>
		<input placeholder="请输入电话号码" value="{{phonenum}}" bindinput="phonenum"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">授权起始日期：</view>
    <picker mode="date" value="{{start_date}}" start="2020-01-01" end="2050-09-01" bindchange="DateChange">
      <view class="picker" value="{{start_date}}">
        {{start_date}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group">
    <view class="title">授权结束日期：</view>
    <picker mode="date" value="{{end_date}}" start="2020-01-01" end="2050-09-01" bindchange="DateChange2">
      <view class="picker">
        {{end_date}}
      </view>
    </picker>
  </view>
  <view style="padding-top: 10px;" class="cu-form-group">
		<view class="title">所属公司：</view>
		<input placeholder="请输入所属公司名称" value="{{company2}}" bindinput="company"></input>
  </view>
  <view class="cu-bar bg-white">
  <view class="action">
    拜访单位：
  </view>
  <view class="action">
    <text style="margin-right:30rpx;">{{companyselect}}</text>
    <button class="cu-btn line-green round" bindtap="showModal" data-target="bottomModal">选择</button>
  </view>
  </view>

  <view wx:if="{{display}}" class="cu-form-group">
		<textarea maxlength="-1" bindinput="textareaAInput" value="{{cause}}" placeholder="请输入来访事由"></textarea>
  </view>
  


