<view style="width:100%;height:{{height}}px;background-color:#F1F7FF;display: inline-block;">
  <view>
    <input type="text" placeholder="角色名称" value="{{roleName}}" bindinput="roleName" class="input_css"></input> 
  </view>
  <view>
    <input type="text" placeholder="角色描述" value="{{roleDesc}}" bindinput="roleDesc" class="input_css"></input> 
  </view>
  <view class="action" style="margin-left:3%;margin-top: 20px;">
    <text class="cuIcon-title text-gray"></text>
    <text style="color:#aaaaaa;" class="text-xl text-bold">菜单列表</text>
  </view>
  <scroll-view scroll-y="true" style="height:{{height*0.5}}px;">
    <view style="width:70%;margin-left: 15%;">
      <view wx:for="{{menulist}}">
        <button class="cu-btn bg-{{item.bgColor?'green2':'hui'}} margin-sm basis-sm" style="width: 100%;height: 35px;margin-left: 0px;" data-objuid="{{item.objuid}}" bindtap="check">{{item.menuName}}</button>
      </view>
    </view>
  </scroll-view>
  <view class="padding flex flex-direction">
    <button bindtap="save" class="cu-btn bg-blue2 lg" style="width:76%;margin-left:12%;margin-top: 15px;">保存</button>
  </view>
  
  
</view>